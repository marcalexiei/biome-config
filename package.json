{
  "name": "@marcalexiei/biome-config",
  "version": "2.0.0",
  "description": "Custom BiomeJS config",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "biome",
    "config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcalexiei/biome-config"
  },
  "author": "Marco Pasqualetti @marcalexiei",
  "license": "MIT",
  "exports": {
    "./base": "./configs/base.json",
    "./css": "./configs/css.json",
    "./react": "./configs/react.json"
  },
  "files": [
    "configs"
  ],
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "scripts": {
    "format": "biome format",
    "format:fix": "biome format --fix",
    "format:tests": "pnpm -r exec biome format",
    "format:tests:fix": "pnpm -r exec biome format --fix",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "test": "pnpm --workspace-concurrency=1 --filter=\"tests-*\" run test",
    "release": "changeset publish",
    "check-all": "pnpm run format && pnpm run format:tests && pnpm run lint && pnpm run test",
    "check-rule-configuration": "./scripts/check-rules-configuration.sh "
  },
  "peerDependencies": {
    "@biomejs/biome": "^2.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@types/node": "24.3.1"
  }
}
